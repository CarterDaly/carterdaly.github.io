---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { siteConfig } from '../config/siteConfig';
import '../styles/global.css';

const {
  title,
  description,
  ogImage = siteConfig.assets.ogDefault,
} = Astro.props;

const pageTitle = title ?? siteConfig.metaTitle ?? siteConfig.name;
const pageDescription =
  description ?? siteConfig.metaDescription ?? siteConfig.heroSubheading;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />

    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogImage} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="icon" type="image/svg+xml" href={siteConfig.assets.faviconSvg} />
    {siteConfig.assets.faviconIco && (
      <link rel="alternate icon" href={siteConfig.assets.faviconIco} />
    )}

    <link rel="preconnect" href="https://api.fontshare.com" />
    <link
      rel="stylesheet"
      href="https://api.fontshare.com/v2/css?f[]=clash-display@600,700&f[]=satoshi@400,500,600&f[]=jetbrains-mono@400,500&display=swap"
    />
  </head>
  <body class="bg-surface text-primary font-body min-h-screen antialiased">
    <a
      href="#main"
      class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-50 focus:rounded-md focus:bg-elevated focus:px-3 focus:py-2 focus:text-primary focus:shadow-lg"
    >
      Skip to content
    </a>
    <div class="flex min-h-screen flex-col">
      <Header />
      <main id="main" class="flex-1">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
