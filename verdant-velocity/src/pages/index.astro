---
import BaseLayout from '../layouts/BaseLayout.astro';
import PlasmaHeader from '../components/PlasmaHeader.jsx';
import SectionTitle from '../components/SectionTitle.astro';
import Stats from '../components/Stats.astro';
import WorkGrid from '../components/WorkGrid.astro';
import ContactBand from '../components/ContactBand.astro';
import { workItems } from '../data/work';
import { siteConfig } from '../config/siteConfig';

const focusAreas = [
  {
    label: 'fusion',
    title: 'disruption prediction',
    copy: 'Stability forecasting and early warning signals for tokamak plasmas, tuned for interpretability.',
    tag: 'time-series / physics-informed',
  },
  {
    label: 'race strategy',
    title: 'bayesian simulations',
    copy: 'FastF1-driven strategy exploration: safety car priors, tyre deg models, and real-time adjustments.',
    tag: 'probabilistic / control',
  },
  {
    label: 'forecasting',
    title: 'resilient systems',
    copy: 'Uncertainty-aware forecasting for energy and telemetry streams; robust to drift and regime shifts.',
    tag: 'uncertainty / reliability',
  },
];

const approach = [
  {
    title: 'research & data',
    body: 'Interrogate signals before models. Clean, align, and pressure-test assumptions with domain context.',
  },
  {
    title: 'modeling & experimentation',
    body: 'Iterate with interpretable baselines first; layer in complexity only when marginal gains justify it.',
  },
  {
    title: 'evaluation & uncertainty',
    body: 'Calibration, sensitivity analysis, and failure-mode surfacing are first-class outputs.',
  },
  {
    title: 'communication',
    body: 'Translate results into decisions with visual, inspectable artifacts — not opaque heuristics.',
  },
];
---

<BaseLayout title={siteConfig.metaTitle} description={siteConfig.metaDescription}>
  <section id="top" class="px-6 pb-12 pt-8 sm:pt-10 lg:pt-14">
    <div class="mx-auto max-w-6xl space-y-6">
      <PlasmaHeader
        client:load
        label={siteConfig.label}
        heading={siteConfig.heroHeading}
        subheading={siteConfig.heroSubheading}
        paragraph={siteConfig.heroParagraph}
        ctaLabel={siteConfig.contactCtaLabel}
        ctaHref={siteConfig.links.email}
        secondaryCtaLabel={siteConfig.secondaryCtaLabel}
        secondaryHref={siteConfig.links.resume}
        intensity={1}
      />
      <Stats stats={siteConfig.stats} />
    </div>
  </section>

  <section id="focus" class="px-6 pb-16">
    <div class="mx-auto max-w-6xl space-y-8">
      <SectionTitle
        eyebrow="focus areas"
        title="Operating at the edge of signals and systems"
        subtitle="Fusion stability, race strategy, and resilient forecasting — explored as cohesive, interpretable systems."
      />
      <div class="grid gap-5 lg:grid-cols-3">
        {focusAreas.map((item) => (
          <div
            class="reveal relative overflow-hidden rounded-2xl border border-white/10 bg-white/5 p-5 shadow-[0_20px_60px_rgba(0,0,0,0.35)] backdrop-blur"
          >
            <div class="absolute inset-0 bg-gradient-to-br from-white/4 via-transparent to-black/30" />
            <div class="relative flex items-center justify-between text-xs uppercase tracking-[0.18em] text-muted">
              <span>{item.label}</span>
              <span class="flex items-center gap-2 text-[10px]">
                <span class="h-1.5 w-1.5 rounded-full bg-accent-primary" />
                {item.tag}
              </span>
            </div>
            <div class="relative mt-4 space-y-2">
              <p class="font-display text-xl text-white">{item.title}</p>
              <p class="text-sm text-muted">{item.copy}</p>
            </div>
            <div class="relative mt-4 h-[1px] w-full bg-gradient-to-r from-transparent via-white/25 to-transparent" />
            <div class="relative mt-3 flex items-center gap-2 text-[11px] uppercase tracking-[0.18em] text-muted">
              <span class="h-1 w-4 rounded-full bg-accent-primary/70" />
              interpretable / high-impact
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section id="work" class="px-6 pb-16">
    <div class="mx-auto max-w-6xl space-y-8">
      <SectionTitle
        eyebrow="featured work"
        title="Selected explorations"
        subtitle="Placeholder case studies—click through to see the narrative structure."
      />
      <WorkGrid projects={workItems.slice(0, 3)} />
      <div class="flex justify-end">
        <a
          href="/work"
          class="inline-flex items-center gap-2 text-sm text-primary transition hover:text-white"
        >
          View all work
          <span aria-hidden="true">↗</span>
        </a>
      </div>
    </div>
  </section>

  <section id="approach" class="px-6 pb-16">
    <div class="mx-auto max-w-6xl space-y-10">
      <SectionTitle
        eyebrow="approach"
        title="Intentional methods, not opaque heuristics"
        subtitle="How I move from research questions to reliable systems."
      />
      <div class="grid gap-8 lg:grid-cols-[0.9fr,1.1fr]">
        <div class="reveal space-y-5 rounded-2xl border border-white/10 bg-gradient-to-b from-white/5 to-white/[0.02] p-6 shadow-[0_20px_60px_rgba(0,0,0,0.35)]">
          <p class="text-sm uppercase tracking-[0.22em] text-muted">principles</p>
          <ul class="space-y-4 text-muted">
            <li class="flex items-start gap-3">
              <span class="mt-1 h-2 w-2 rounded-full bg-accent-primary" />
              <span>Interrogate the data-generating process before model selection.</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="mt-1 h-2 w-2 rounded-full bg-accent-secondary" />
              <span>Prioritize explainability and observability from the first prototype.</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="mt-1 h-2 w-2 rounded-full bg-accent-warm" />
              <span>Bias toward robustness: test for drift, stress extreme regimes, and document failure modes.</span>
            </li>
          </ul>
        </div>
        <div class="grid gap-5 sm:grid-cols-2">
          {approach.map((step, idx) => (
            <div
              class="reveal space-y-3 rounded-2xl border border-white/10 bg-white/5 p-5 shadow-[0_12px_40px_rgba(0,0,0,0.3)]"
              style={`transition-delay:${idx * 90}ms`}
            >
              <div class="flex items-center justify-between text-[11px] uppercase tracking-[0.18em] text-muted">
                <span>{step.title}</span>
                <span class="h-1 w-6 rounded-full bg-accent-primary/70" />
              </div>
              <p class="text-sm text-primary/90">{step.body}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section id="about" class="px-6 pb-16">
    <div class="mx-auto max-w-6xl space-y-8">
      <SectionTitle
        eyebrow="about"
        title="Carter Daly — student & research-oriented ML practitioner"
        subtitle="Focused on fusion, race strategy, and time-series — always with interpretable, decision-ready outputs."
      />
      <div class="grid gap-8 lg:grid-cols-[1.1fr,0.9fr]">
        <div class="reveal space-y-4 rounded-2xl border border-white/10 bg-gradient-to-r from-white/5 via-transparent to-white/5 p-6 shadow-[0_20px_60px_rgba(0,0,0,0.35)]">
          <p class="text-lg text-primary/90">
            I study and build ML systems where stakes are high and signals are messy — stabilizing fusion plasmas,
            plotting F1 race strategies, and forecasting uncertain time-series. My bias: clarity over cleverness,
            physics and priors over unchecked complexity.
          </p>
          <p class="text-muted">
            Outside experiments, I prototype interfaces that make model behavior legible to teams. I’m currently
            extending this portfolio into bespoke case studies.
          </p>
        </div>
        <div class="reveal relative overflow-hidden rounded-2xl border border-white/10 bg-white/5 p-6 shadow-[0_20px_60px_rgba(0,0,0,0.35)]">
          <div class="absolute inset-0 bg-gradient-to-b from-white/6 via-transparent to-black/50" />
          <div class="relative flex items-start gap-4">
            <div class="h-14 w-14 shrink-0 rounded-xl border border-white/15 bg-gradient-to-br from-accent-primary/30 via-transparent to-accent-secondary/30" />
            <div class="space-y-2">
              <p class="text-sm uppercase tracking-[0.18em] text-muted">current threads</p>
              <ul class="space-y-2 text-sm text-primary/90">
                <li class="flex items-start gap-2">
                  <span class="mt-1 h-1.5 w-1.5 rounded-full bg-accent-primary" />
                  Fusion disruption early-warning with interpretable TS models.
                </li>
                <li class="flex items-start gap-2">
                  <span class="mt-1 h-1.5 w-1.5 rounded-full bg-accent-secondary" />
                  Bayesian race strategy simulations leveraging FastF1 data.
                </li>
                <li class="flex items-start gap-2">
                  <span class="mt-1 h-1.5 w-1.5 rounded-full bg-accent-warm" />
                  Uncertainty-aware forecasting pipelines resilient to drift.
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="contact" class="px-6 pb-20">
    <div class="mx-auto max-w-6xl">
      <ContactBand />
    </div>
  </section>

  <script type="module">
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (!prefersReducedMotion) {
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
              observer.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.2 }
      );
      document.querySelectorAll('.reveal').forEach((el) => observer.observe(el));
    } else {
      document.querySelectorAll('.reveal').forEach((el) => el.classList.add('visible'));
    }
  </script>
</BaseLayout>
