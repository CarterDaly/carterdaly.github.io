---
const { stats } = Astro.props;
const safe = (value: string) => value && value !== '' ? value : 'â€”';
---

<div class="grid gap-3 sm:grid-cols-3">
  {Object.entries(stats).map(([key, value]) => (
    <div class="rounded-2xl border border-white/10 bg-white/5 p-4 backdrop-blur">
      <p class="text-xs uppercase tracking-[0.18em] text-muted">{key}</p>
      <p class="mt-2 font-display text-2xl text-white">{safe(value as string)}</p>
    </div>
  ))}
</div>
