---
const { eyebrow, title, subtitle } = Astro.props;
---

<div class="space-y-3">
  {eyebrow && (
    <p class="text-xs uppercase tracking-[0.2em] text-muted">{eyebrow}</p>
  )}
  <div class="space-y-2">
    <h2 class="font-display text-2xl sm:text-3xl text-white tracking-tight">{title}</h2>
    {subtitle && <p class="text-muted text-base sm:text-lg max-w-2xl">{subtitle}</p>}
  </div>
</div>
